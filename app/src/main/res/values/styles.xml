<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextViewTitle" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="CommonView">
        <item name ="line_background">@color/white</item>
    </style>

    <!--常用行 编辑型 mine页面-->
    <style name="CommonView.ShowLine.mine">
        <item name ="icon_show">true</item>
        <item name ="title_size">14sp</item>
        <item name ="title_color">@color/textTitle</item>
        <item name ="content_size">14sp</item>
        <item name ="content_color">@color/textTitle</item>
        <item name="arrow_show">true</item>
        <item name ="arrow_src">@drawable/ic_delivery_insert</item>
    </style>
    <style name="CommonView.ShowLine">
        <item name ="content_hintcolor">@color/textHint</item>
        <!--<item name="content_editenable">true</item>-->
        <item name ="lineundericon_background">@color/line</item>
        <item name ="lineunderinfo_background">@color/line</item>
        <item name ="lineundericon_show">false</item>
        <item name ="lineunderinfo_show">true</item>
    </style>


    <!--导航栏样式用到-->
    <style name="LibraryTextAppearanceTab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="LibraryTabLayout" parent="android:Widget">
        <item name="exTabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="exTabIndicatorColor">?attr/colorAccent</item>
        <item name="exTabIndicatorHeight">2dp</item>
        <item name="exTabIndicatorWidth">equalToTab</item>
        <item name="exTabPaddingStart">12dp</item>
        <item name="exTabPaddingEnd">12dp</item>
        <item name="exTabBackground">?attr/selectableItemBackground</item>
        <item name="exTabTextAppearance">@style/LibraryTextAppearanceTab</item>
        <item name="exTabSelectedTextColor">?android:textColorPrimary</item>
        <item name="exTabGravity">fill</item>
        <item name="exTabMode">fixed</item>
    </style>
    <!--导航栏样式用到-->

</resources>
